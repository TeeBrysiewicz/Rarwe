<div class="rr-sidebar">
  <h1 class="text-lg mb-4">Bands</h1>
  <ul class="rr-list">
    {{#each this.model as |band|}}
      <li class="rr-list-item" data-test-rr="band-list-item">
        <LinkTo @route="bands.band" @model={{band.id}} class="rr-band-link" data-test-rr="band-link">
          {{capitalize band.name}}
          <span class="rr-pointer">
            {{fa-icon "angle-right"}}
          </span>
        </LinkTo>
      </li>
    {{/each}}
  </ul>

  <div class="rr-new-label">
    {{#if this.isAddingBand}}
      <form class="rr-inline-form" {{on "submit" this.saveBand}}>
        <Input 
          @type="text"
          @value={{this.newBandName}}
          class="rr-input"
          placeholder="New Band"
          data-test-rr="new-band-input"
        />

        <div class="rr-inline-form-group ml2">
          <button 
            type="submit"
            class="rr-action-button"
            disabled={{this.isAddButtonDisabled}}
            data-test-rr="new-band-button">
              Add
          </button>

          <button
            type="button"
            clas="rr-cancel-icon"
            {{on "click" this.cancelAddBand}}>
              {{fa-icon "times"}}
          </button>
        </div>
      </form>
    {{else}}
      <br>
      <label
        type="label"
        class="avenir bn bg-white text-black p-3 mt-1 rounded"
        data-test-rr="new-band-label"
        {{on "click" this.addBand}}>
          {{fa-icon "plus"}}
          Add New Band
      </label>
    {{/if}}
  </div>
</div>

<div class="rr-main-panel">
  {{outlet}}
</div>