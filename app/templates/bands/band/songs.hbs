<ul class="rr-list">
  {{#each this.model.songs as |song|}}
    <li class="rr-list-item" data-test-rr="song-list-item">
      {{song.title}}
      <StarRating
      class="fr"
      @rating={{song.rating}}
      @onClick={{fn this.updateRating song}}
      />
    </li>
  {{else}}
    <li class="tc">
      No {{this.model.name}} songs yet, why don't you <a href="#" {{ on "click" this.addSong}}>create one?</a> 
    </li>
  {{/each}}
</ul>

<div class="rr-new-label">
  {{#if this.isAddingSong}}
    <form class="rr-inline-form" {{on "submit" this.saveSong}} data-test-rr="new-song-form">
      <Input 
        @type="text"
        @value={{this.newSongTitle}}
        class="rr-input"
        placeholder="New Song"
        data-test-rr="new-song-input"
      />

      <div class="rr-inline-form-group ml2">
        <button 
          type="submit"
          class="rr-action-button"
          disabled={{this.isAddButtonDisabled}}
          data-test-rr="new-song-button">
            Add
        </button>

        <button
          type="button"
          clas="rr-cancel-icon"
          {{on "click" this.cancelAddSong}}>
            {{fa-icon "times"}}
        </button>
      </div>
    </form>
  {{else}}
    <label 
      type="label"
      class="avenir bn bg-transparent near-white"
      data-test-rr="new-song-label"
      {{on "click" this.addSong}}>
        {{fa-icon "plus"}}
        Add New Song
    </label>
  {{/if}}
</div>
