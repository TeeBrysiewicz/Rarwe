 <div class="w-full max-w-xs mx-auto">
  <h3 data-test-rr="form-header" class="text-center p-4">Sign up to R&R</h3>
  <form {{on "submit" this.signUp}} class="w-full max-w-sm">
    {{#each this.baseErrors as |error|}}
      <div class="rr-error-message mb2" datat-test-rr="error-message">{{error}}</div>
    {{/each}}

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        {{#if this.showErrors.email}}
          <div class="rr-form-field-error" data-test-rr="email-error">{{v-get this.model "email" "message"}}</div>
        {{/if}}
        <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="email">
          Email
        </label>
      </div>
      <div class="md:w-2/3">
        <Input
          class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500 focus:text-black"
          id="email"
          placeholder="john.doe@gmail.com"
          @type="email"
          @value={{this.model.email}}
          {{on "blur" (fn this.setShowErrors "email")}}
          {{on "input" this.resetBaseErrors}}
        />
      </div>
    </div>


    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        {{#if this.showErrors.password}}
          <div class="rr-form-field-error" data-test-rr="password-error">{{v-get this.model "password" "message"}}</div>
        {{/if}}
        <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="password">
          Password
        </label>
      </div>
      <div class="md:w-2/3">
        <Input
          class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500 focus:text-black"
          id="password"
          placeholder="******************"
          @type="password"
          @value={{this.model.password}}
          {{on "blur" (fn this.setShowErrors "password")}}
          {{on "input" this.resetBaseErrors}}
        />
      </div>
    </div>
    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3"></div>
      <label class="md:w-2/3 block text-gray-500 font-bold">
        <input class="mr-2 leading-tight" type="checkbox">
        <span class="text-sm">
          Send me your newsletter!
        </span>
      </label>
    </div>
    <div class="md:flex md:items-center">
      <div class="md:w-1/3"></div>
      <div class="md:w-2/3">
        <button
          class="shadow bg-blue-500 hover:bg-blue-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
          type="submit"
          data-test-rr="sign-up-button"
          disabled={{v-get this.model "isInvalid"}}
        >
          Sign Up
        </button>
        <LinkTo @route="login" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
          Log in
        </LinkTo>
      </div>
    </div>
  </form>
</div>